{
  "manifest_version": 3,
  "name": "YouTLDW",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "128": "images/icon.png"  // Specify the path to your 128x128 icon here
  },
  "action": {
    "default_icon": {
      "128": "images/icon.png"
    }
  }
}
